:root {
    --color-bg-dark: #0a0a0f;
    --color-glass-base: rgba(180, 200, 220, 0.08);
    --color-stress: rgba(255, 50, 50, 0.4);
    --color-ui-text: rgba(255, 255, 255, 0.85);
    --color-ui-text-dim: rgba(255, 255, 255, 0.4);
    --color-ui-accent: rgba(100, 200, 255, 0.9);
}

* { margin: 0; padding: 0; box-sizing: border-box; }

html, body {
    width: 100%; height: 100%; overflow: hidden;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif;
    background: var(--color-bg-dark); color: var(--color-ui-text);
    user-select: none;
}

body { display: flex; align-items: center; justify-content: center; }

.ambient-background {
    position: fixed; top: 0; left: 0; width: 100%; height: 100%;
    z-index: 1; pointer-events: none;
}

.ambient-layer {
    position: absolute; width: 100%; height: 100%; opacity: 0.3;
}

.ambient-layer.layer-1 {
    background: radial-gradient(circle at 30% 40%, rgba(100, 150, 200, 0.15) 0%, transparent 50%);
    animation: ambient-pulse 8s ease-in-out infinite;
}

.ambient-layer.layer-2 {
    background: radial-gradient(circle at 70% 60%, rgba(150, 100, 200, 0.1) 0%, transparent 50%);
    animation: ambient-pulse 12s ease-in-out infinite reverse;
}

.ambient-layer.layer-3 {
    background: radial-gradient(circle at 50% 50%, rgba(100, 200, 200, 0.08) 0%, transparent 60%);
    animation: ambient-pulse 10s ease-in-out infinite;
}

@keyframes ambient-pulse {
    0%, 100% { opacity: 0.3; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(1.1); }
}

.glass-jar-container {
    position: relative; width: 80vw; height: 80vh;
    max-width: 1200px; max-height: 900px;
    perspective: 1000px; transform-style: preserve-3d; z-index: 10;
    transition: transform 1.2s ease;
}

.glass-jar-container.shaking { animation: jar-shake 0.4s ease-in-out; }
.glass-jar-container.breaking { animation: jar-break 1.5s ease-out forwards; }

@keyframes jar-shake {
    0%, 100% { transform: translate(0, 0); }
    25% { transform: translate(-3px, -2px) rotate(-0.5deg); }
    50% { transform: translate(3px, 2px) rotate(0.5deg); }
    75% { transform: translate(-2px, 1px) rotate(-0.3deg); }
}

@keyframes jar-break {
    0% { transform: scale(1); opacity: 1; }
    60% { transform: scale(1.15); opacity: 0.6; }
    100% { transform: scale(1.3); opacity: 0; }
}

.crack-canvas {
    position: absolute; top: 0; left: 0; width: 100%; height: 100%;
    z-index: 50; pointer-events: none; opacity: 0.9;
}

