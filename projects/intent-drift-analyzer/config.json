{
  "analyzer": {
    "name": "Contextual Intent Drift Analyzer",
    "version": "1.0.0",
    "description": "Detects gradual shifts in user intent during extended interactions",
    "refreshInterval": 1000,
    "maxAuditLogs": 100
  },
  "thresholds": {
    "driftWarning": 0.30,
    "driftCritical": 0.50,
    "coherenceTarget": 0.80,
    "coherenceLow": 0.50,
    "similarityMinimum": 0.70
  },
  "analysis": {
    "windowSize": 5,
    "minInteractions": 2,
    "embeddingStrategy": "keyword-based",
    "similarityMethod": "jaccard-overlap-hybrid"
  },
  "metrics": [
    {
      "id": "semantic-similarity",
      "name": "Semantic Similarity",
      "description": "Compares current context to initial intent",
      "range": "0-100%",
      "target": ">70%"
    },
    {
      "id": "topic-coherence",
      "name": "Topic Coherence",
      "description": "Measures consistency within interaction window",
      "range": "0-100%",
      "target": ">80%"
    },
    {
      "id": "vocabulary-overlap",
      "name": "Vocabulary Overlap",
      "description": "Shared keywords between initial and current",
      "range": "0-100%",
      "target": ">60%"
    },
    {
      "id": "intent-stability",
      "name": "Intent Stability",
      "description": "Inverse of drift variance over time",
      "range": "0-100%",
      "target": ">70%"
    }
  ],
  "phases": [
    {
      "id": "question",
      "name": "Question Phase",
      "indicators": ["how", "what", "when", "where", "why", "is", "are", "can"]
    },
    {
      "id": "problem",
      "name": "Problem Phase",
      "indicators": ["issue", "problem", "error", "fail", "slow", "broken", "crash"]
    },
    {
      "id": "decision",
      "name": "Decision Phase",
      "indicators": ["should", "would", "consider", "switch", "choose", "migrate"]
    },
    {
      "id": "planning",
      "name": "Planning Phase",
      "indicators": ["budget", "cost", "timeline", "plan", "approval", "finance"]
    }
  ],
  "alertTypes": [
    {
      "id": "drift-warning",
      "name": "Drift Warning",
      "severity": "medium",
      "condition": "drift > 30%",
      "icon": "âš ï¸"
    },
    {
      "id": "drift-critical",
      "name": "Drift Critical",
      "severity": "high",
      "condition": "drift > 50%",
      "icon": "ðŸš¨"
    },
    {
      "id": "coherence-low",
      "name": "Low Coherence",
      "severity": "medium",
      "condition": "coherence < 50%",
      "icon": "âš ï¸"
    },
    {
      "id": "shift-detected",
      "name": "Intent Shift",
      "severity": "medium",
      "condition": "phase change detected",
      "icon": "ðŸ”„"
    }
  ],
  "sampleQueries": [
    "How do I optimize database performance?",
    "What are the best practices for query indexing?",
    "I'm seeing slow response times in my API",
    "Should I consider switching databases?",
    "What cloud services would be better for scaling?",
    "How much would migration cost?",
    "What are the financial implications?",
    "Can you help with budget planning?",
    "How do I get approval from finance?",
    "What timeline should I propose?"
  ],
  "dashboard": {
    "refreshInterval": 1000,
    "enableRealTime": true,
    "enableCharts": true,
    "enableHeatmap": true
  },
  "export": {
    "format": "JSON",
    "includeInteractions": true,
    "includeMetrics": true,
    "includeAlerts": true,
    "includedFields": ["sessionInfo", "metrics", "interactions", "alerts"]
  }
}
