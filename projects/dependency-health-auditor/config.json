{
  "auditor": {
    "name": "Dependency Health Auditor",
    "version": "1.0.0",
    "description": "Continuous monitoring subsystem for service dependencies",
    "probeInterval": 30000,
    "healthCheckTimeout": 5000,
    "maxHistoryRecords": 100,
    "maxAnomaliesStored": 10
  },
  "defaultDependencies": [
    {
      "id": "api-gateway",
      "name": "API Gateway",
      "type": "service",
      "endpoint": "https://api.example.com/health",
      "timeout": 5000,
      "expectedResponseTime": 200,
      "critical": true
    },
    {
      "id": "db-primary",
      "name": "Primary Database",
      "type": "database",
      "endpoint": "db.internal:5432",
      "timeout": 3000,
      "expectedResponseTime": 150,
      "critical": true
    },
    {
      "id": "cache-redis",
      "name": "Redis Cache",
      "type": "cache",
      "endpoint": "cache.internal:6379",
      "timeout": 2000,
      "expectedResponseTime": 50,
      "critical": false
    },
    {
      "id": "auth-service",
      "name": "Authentication Service",
      "type": "service",
      "endpoint": "https://auth.example.com/health",
      "timeout": 4000,
      "expectedResponseTime": 300,
      "critical": true
    },
    {
      "id": "messaging-queue",
      "name": "Message Queue",
      "type": "infrastructure",
      "endpoint": "queue.internal:5672",
      "timeout": 3000,
      "expectedResponseTime": 100,
      "critical": true
    },
    {
      "id": "search-engine",
      "name": "Search Engine",
      "type": "service",
      "endpoint": "https://search.example.com/health",
      "timeout": 5000,
      "expectedResponseTime": 400,
      "critical": false
    }
  ],
  "anomalyThresholds": {
    "failureRate": 0.05,
    "responseTimeMultiplier": 2.5,
    "degradationThreshold": 50,
    "consecutiveFailureLimit": 3
  },
  "healthScoreWeights": {
    "responseTime": 0.4,
    "failureRate": 0.35,
    "degradationTrend": 0.25
  },
  "visualization": {
    "theme": "dark",
    "updateInterval": 5000,
    "enableAnimations": true,
    "maxDataPoints": 100
  }
}
