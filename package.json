{
    "name": "dev-card-showcase-ci",
    "version": "1.0.0",
    "description": "CI tooling for dev-card-showcase",
    "private": true,
    "scripts": {
        "size": "size-limit"
    },
    "devDependencies": {
        "@size-limit/preset-small-lib": "^11.1.6",
        "size-limit": "^11.1.6"
    },
    "size-limit": [
        {
            "path": "dev-card-showcase/js/static-projects.js",
            "limit": "150 kB"
        },
        {
            "path": "dev-card-showcase/js/projects.js",
            "limit": "30 kB"
        },
        {
            "path": "dev-card-showcase/style.css",
            "limit": "120 kB"
        }
    ]
}